{
  "name": "vibeguard",
  "displayName": "VibeGuard - 代码安全卫士",
  "description": "实时检测代码中的致命错误，防止你删库跑路、泄露密钥、生产事故",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": ["Linters", "Other"],
  "keywords": ["security", "linter", "safety", "SQL", "XSS", "injection"],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibeguard.scanWorkspace",
        "title": "VibeGuard: 扫描整个工作区"
      },
      {
        "command": "vibeguard.toggleEnable",
        "title": "VibeGuard: 启用/禁用插件"
      }
    ],
    "configuration": {
      "title": "VibeGuard",
      "properties": {
        "vibeguard.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用 VibeGuard 代码检查"
        },
        "vibeguard.severityLevels": {
          "type": "object",
          "default": {
            "error": true,
            "warning": true,
            "info": false
          },
          "description": "设置显示的问题严重级别"
        },
        "vibeguard.excludedFolders": {
          "type": "array",
          "default": ["node_modules", ".git", "dist", "build"],
          "description": "排除的文件夹"
        },
        "vibeguard.maxFileSize": {
          "type": "number",
          "default": 500000,
          "description": "最大分析文件大小（字节）"
        },
        "vibeguard.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "输入防抖延迟（毫秒）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/test-electron": "^2.3.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/vibeguard/vibeguard"
  },
  "publisher": "VibeHacks",
  "license": "MIT",
  "icon": "resources/icon.png"
}
